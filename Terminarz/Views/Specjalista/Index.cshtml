@model IEnumerable<Terminarz.Models.Specjalista>

@{
    ViewBag.Title = "Specjalista";
    @Styles.Render("~/Style/style.css")
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Style/style.css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <header>
                    <h2 style="color:black; text-align:center;">Proszę wybrać specjalistę</h2>
                </header>

                <p>
                    @Html.ActionLink("Dodaj nowego specjalistę", "Create", new { @class = "btn btn-primary" })
                </p>
                @if (User.IsInRole("Admin"))
                {

                }

                <table class="table table-striped table-dark" id="tabelaSpecjalistów">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                <h3>@Html.DisplayNameFor(model => model.NazwaSpecjalisty)</h3>
                            </th>
                            <th>
                                <p>Wybór</p>
                            </th>
                            @if (User.IsInRole("Admin") || User.IsInRole("Rejestrator") || User.IsInRole("Lekarz"))
                            {
                                <th colspan="4">
                                    <p>Zarządzanie</p>
                                </th>
                            }

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NazwaSpecjalisty)
                                </td>
                                <td>
                                    @*@Html.ActionLink("przejście do karty rezerwacji", "Create", "KartaRezerwacji", new { specjalistaId = item.SpecjalistaId }, new { @class = "btn btn-primary" })*@
                                    @Html.ActionLink("Wybieram", "WyborLekarza", "Lekarz", new { specjalistaId = item.SpecjalistaId }, new { @class = "btn btn-primary" })

                                    <!--Neurolog-->
                                    @*@if (item.NazwaSpecjalisty == "Neurolog")
                            {
                                @Html.ActionLink("Wybieram", "Index", "Lekarz", new { id = item.IdSpecjalista }, new { @class = "btn btn-primary" })
                            }*@
                                    <!--Kardiolog-->
                                    @*@if (item.NazwaSpecjalisty == "Kardiolog")
                            {
                                @Html.ActionLink("Wybieram", "Index", "Lekarz", new { id = item.IdSpecjalista }, new { @class = "btn btn-primary" })
                            }*@
                                    <!--Laryngolog-->
                                    @*@if (item.NazwaSpecjalisty == "Laryngolog")
                            {
                                @Html.ActionLink("Wybieram", "Index", "Lekarz", new { id = item.IdSpecjalista }, new { @class = "btn btn-primary" })
                            }*@
                                    <!--Okulista-->
                                    @*@if (item.NazwaSpecjalisty == "Okulista")
                            {
                                @Html.ActionLink("Wybieram", "Index", "Lekarz", new { id = item.IdSpecjalista }, new { @class = "btn btn-primary" })
                            }*@
                                    <!--Rodzinny-->
                                    @*@if (item.NazwaSpecjalisty == "Rodzinny")
                            {
                                @Html.ActionLink("Wybieram", "Index", "Lekarz", new { id = item.IdSpecjalista }, new { @class = "btn btn-primary" })
                            }*@
                                </td>

                                @if (User.IsInRole("Rejestrator") || User.IsInRole("Lekarz"))
                                {
                                    <td>
                                        @Html.ActionLink("Edytuj", "Edit", new { id = item.SpecjalistaId }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.SpecjalistaId }, new { @class = "btn btn-default" })
                                    </td>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        @Html.ActionLink("Edytuj", "Edit", new { id = item.SpecjalistaId }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Szczegóły", "Details", new { id = item.SpecjalistaId }, new { @class = "btn btn-default" })
                                        @Html.ActionLink("Kasuj", "Delete", new { id = item.SpecjalistaId }, new { @class = "btn btn-danger" })
                                    </td>
                                }
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>
